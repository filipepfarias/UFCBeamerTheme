\mode<presentation>

% UFC theme colors
\definecolor{UFCOrange}{RGB}{231,120,19}
\definecolor{UFCGold}{RGB}{206,177,68}
\definecolor{UFCBlue}{RGB}{0,83,134}
\definecolor{UFCGreen}{RGB}{0,146,62}
\definecolor{UFCGray}{RGB}{194,193,193}
\definecolor{UFCWhite}{RGB}{255,255,255}

\setbeamercolor{structure}{fg=UFCOrange,bg=white}

%% Defining palletes
% For use it 'parent=palette primary' instead of 'use='
\setbeamercolor{palette primary}{use=structure,fg=structure.fg,bg=structure.bg}
\setbeamercolor{palette secondary}{use=structure,fg=structure.fg,bg=structure.fg!25!white}
\setbeamercolor{palette tertiary}{use=structure,fg=UFCGray,bg=structure.fg!40!white}
\setbeamercolor{palette quaternary}{use=structure,fg=structure.fg,bg=structure.fg!65!white}

%% Sidebar colors
\setbeamercolor{sidebar}{use=structure,bg=structure.fg,fg=structure.bg}
\setbeamercolor{palette sidebar primary}{use=structure,fg=structure.bg}
\setbeamercolor{palette sidebar secondary}{use=structure,fg=structure.bg!80!UFCOrange}
\setbeamercolor{palette sidebar tertiary}{use=structure,bg=white,fg=white}
\setbeamercolor{palette sidebar quaternary}{use=structure,bg=white,fg=structure.bg!20!black}

\setbeamercolor*{titlelike}{parent=palette primary}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

% Normal text
\setbeamercolor{normal text}{fg=black}

%Blocks
\setbeamercolor{block title}{bg=UFCOrange,fg=white}
\setbeamercolor{block title alerted}{bg=UFCGray!80!black,fg=white}
\setbeamercolor{block title example}{bg=UFCGreen,fg=white}
\setbeamercolor{block body}{bg=UFCOrange!8,fg=black}
\setbeamercolor{block body alerted}{bg=UFCGray!15,fg=black}
\setbeamercolor{block body example}{bg=UFCGray!5,fg=black}



