% Frame title
\defbeamertemplate*{frametitle}{ufc}[1][]
{

\begin{tikzpicture}
\useasboundingbox (0,-0.05) rectangle(\the\paperwidth,0.95);

% Three-colored line
 \fill[color=UFCGold] (-1,0) rectangle(0,1);
 \fill[color=UFCOrange] (0,0) rectangle(1,1);
 \fill[color=UFCBlue] (1,0) rectangle(\the\paperwidth,1);
 
 % Logo in the orange box
 \node[inner sep=0pt] (logo) at (-0.5,0.5){\includegraphics[height=0.85cm]{graphics/brasao4_vertical_white}};
\end{tikzpicture}

% If we don't have a subtitle, put the title
% at the center of the header
\ifx\insertframesubtitle\@empty

  \begin{textblock*}{10cm}(2.2cm,0.35cm)
  {\usebeamercolor[fg]{frametitle}\usebeamerfont{frametitle}\insertframetitle}
  \end{textblock*}

\else
% If we have both title and subtitle, stack them
  \begin{textblock*}{10cm}(2.2cm,0.15cm)
  {\usebeamercolor[fg]{frametitle}\usebeamerfont{frametitle}\insertframetitle}
  \end{textblock*}

  \begin{textblock*}{10cm}(2.2cm,0.6cm)
  {\usebeamercolor[fg]{framesubtitle}\usebeamerfont{framesubtitle}\insertframesubtitle}
  \end{textblock*}

\fi
}

